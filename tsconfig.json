{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ES6",
    "removeComments": true,
    "declaration": false,
    "noImplicitAny": false,
    "target": "es2017",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "game.ts",
    "game.json"
  ]
}